@model Equipe
<link rel="stylesheet" href="~/css/equipes.css">
@{
    ViewData["Title"] = "Edit";
}

@* <!-- MAIN --> *@
<main>
    <section class="container-grid cadastro-equipes">
        @if (ViewBag.UserName == null)
        {
            <a asp-area="" asp-controller="Login" asp-action="Index">
                Login
            </a>
        }
        else
        {
            <form method="post" action="@Url.Action("Atualizar")" enctype="multipart/form-data" class="frm-cad-equipe">
                <div class="cadequipe-titulo">
                    <h1>Edição de Equipes</h1>
                    <hr>
                </div>

                <input placeholder="" type="hidden" name="IdEquipe" value="@ViewBag.Equipe.IdEquipe">
                <input class="campo-entrada" type="text" placeholder="Nome da Equipe:" name="Nome"
                    value="@ViewBag.Equipe.Nome" required">

                <label class="foto" for="foto-file">
                    <input type="file" id="foto-file" name="Imagem">
                </label>

                <button type="submit">Atualizar</button>

            </form>
        }
    </section>
</main>