@model Equipe
<link rel="stylesheet" href="~/css/equipes.css">
@{
    ViewData["Title"] = "Equipe";
}

<!-- MAIN -->
<main>

    <section class="container-grid cadastro-equipes">


        <form method="post" action="@Url.Action("Cadastrar")" enctype="multipart/form-data" class="frm-cad-equipe">
            <div class="cadequipe-titulo">
                <h1>Cadastro de Equipes</h1>
                <hr>
            </div>

            <input class="campo-entrada" type="text" placeholder="Nome da Equipe:" name="Nome" required">
            <input type="file" placeholder="Imagem" name="Imagem">
            @* <label class="foto" for="foto-file">
            Nenuma imagem selecionada...
            <input type="file" placeholder="Imagem" name="Imagem">>
            </label> *@

            <button type="submit">Cadastro</button>



            <!-- <select class="equipeid" id="equipeid">
                    <option value="">Selecione uma Equipe</option>
                    <option value="x">Equipe X</option>
                    <option value="y">Equipe Y</option>
                </select> -->
        </form>

        <!-- TABELA CADASTRO DE EQUIPES -->

        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Foto</th>
                    <th>&spades;</th>
                </tr>
            </thead>
            @foreach (Equipe equipe in ViewBag.Equipe)
            {
                <tbody>
                    <tr>
                        <td>@equipe.IdEquipe</td>
                        <td>@equipe.Nome</td>
                        <td>
                            <img src="/img/Equipes/@equipe.Imagem" alt="imagem da equipe @equipe.Imagem" width="30px">
                        </td>
                        <td>
                            <a asp-area="" asp-action="Excluir" asp-controller="Equipe" asp-route-id="@equipe.IdEquipe">
                                <img class="yellow-trash" src="~/assets/trash.png" alt=""></a>

                            <a asp-area="" asp-action="Editar" asp-controller="Equipe" asp-route-id="@equipe.IdEquipe">
                                <img class="green-play" src="~/assets/green-play.svg" alt=""></a>
                            @* <img class="green-play" src="~/assets/green-play.svg" alt="">
                        </td>
                        <td>
                            <img class="yellow-trash" src="~/assets/trash.png" alt=""> *@
                        </td>
                    </tr>
                </tbody>
            }

        </table>
    </section>
</main>



@if (ViewBag.UserName == null)
{
    <a asp-area="" asp-controller="Login" asp-action="Index">
        Login
    </a>
}
else
{
    <form method="post" action="@Url.Action("Cadastrar")" enctype="multipart/form-data">

        <input type="text" placeholder="Nome" name="Nome" required>
        <input type="file" placeholder="Imagem" name="Imagem">

        <button class="btn btn-warning" type="submit">Cadastrar</button>
    </form>


    <table class="table table-striped table-responsive">
        <thead>
            <th>Id</th>
            <th>Nome</th>
            <th>Imagem</th>
            <th>Actions</th>
        </thead>

        <tbody>

            @foreach (Equipe equipe in ViewBag.Equipe)
            {
                <tr>
                    <td>@equipe.IdEquipe</td>
                    <td>@equipe.Nome</td>
                    <td>
                        <img src="/img/Equipes/@equipe.Imagem" alt="imagem da equipe @equipe.Imagem" width="30px">
                    </td>
                    <td>
                        <a asp-area="" asp-action="Excluir" asp-controller="Equipe" asp-route-id="@equipe.IdEquipe"> <button
                                type="button" class="btn btn-danger">Excluir</button></a>

                        <a asp-area="" asp-action="Editar" asp-controller="Equipe" asp-route-id="@equipe.IdEquipe"> <button
                                type="button" class="btn btn-info">Editar</button></a>
                    </td>

                </tr>
            }

        </tbody>
    </table>
}

