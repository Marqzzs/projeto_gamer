@model Jogador
<link rel="stylesheet" href="~/css/jogadores.css">
@{
    ViewData["Title"] = "Edit";
}

@if (ViewBag.UserName == null)
{
    <a asp-area="" asp-controller="Login" asp-action="Index">
        Login
    </a>
}
else
{
    <main>

        <section class="container-grid cadastro-equipes">


            <form method="post" action='@Url.Action("Atualizar")' class="frm-cad-equipe">
                <div class="cadequipe-titulo">
                    <h1>Edição de Jogadores</h1>
                    <hr>
                </div>

                <select class="campo-entrada"  name="IdEquipe" id="equipe-select">
                    <option value="0">Selecione uma Equipe</option>
                    @foreach (Equipe e in ViewBag.Equipe)
                    {
                        @if (e.IdEquipe == @ViewBag.Jogador.IdEquipe)
                        {
                            <option value="@e.IdEquipe" selected>@e.Nome</option>
                        }
                        else
                        {
                            <option value="@e.IdEquipe">@e.Nome</option>
                        }
                    }
                </select>
                
                <input type="hidden" name="IdJogador" value="@ViewBag.jogador.IdJogador">
                <input class="campo-entrada" placeholder="Nome" name="Nome" value="@ViewBag.Jogador.Nome" type="text" required>
                <input class="campo-entrada" placeholder="Email" name="Email" value="@ViewBag.Jogador.Email" type="email" required>
                <input class="campo-entrada" placeholder="Senha" name="Senha" value="@ViewBag.Jogador.Senha" type="password" required>
                <button type="submit">Atualizar</button>

            </form>
        </section>
    </main>










    <form method="post" action="@Url.Action("Atualizar")">

        <input type="hidden" name="IdJogador" value="@ViewBag.jogador.IdJogador">

        <input placeholder="Nome" name="Nome" value="@ViewBag.Jogador.Nome" type="text">

        <input placeholder="Email" name="Email" value="@ViewBag.Jogador.Email" type="email">

        <input placeholder="Senha" name="Senha" value="@ViewBag.Jogador.Senha" type="password">

        <select name="IdEquipe" id="IdEquipe">
            <option value="0">Selecione uma opção</option>

            @foreach (Equipe e in ViewBag.Equipe)
            {
                @if (e.IdEquipe == @ViewBag.Jogador.IdEquipe)
                {
                    <option value="@e.IdEquipe" selected>@e.Nome</option>
                }
                else
                {
                    <option value="@e.IdEquipe">@e.Nome</option>
                }
            }
        </select>

        <button class="btn btn-sucess" type="submit"></button>

    </form>
}
